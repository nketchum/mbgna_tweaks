          {% if drupal_view_result('content_profile', 'block_1', user.id, 'news') is not empty %}
            <div class="boxed-field boxed-field-light">
              <h3>{% if privileged %}My {% endif %}News</h3>
              {{- drupal_view('content_profile', 'block_1', user.id, 'news') -}}
            </div>
          {% endif %}
        </div>
        <div class="col col-level1 col-lg-4 col-md-4">
          {% if drupal_view_result('content_profile', 'block_1', user.id, 'blog') is not empty %}
            <div class="boxed-field boxed-field-light">
              <h3>{% if privileged %}My {% endif %}Stories</h3>
