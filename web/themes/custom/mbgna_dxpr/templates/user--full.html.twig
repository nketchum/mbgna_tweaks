{#
/**
 * @file
 * Theme override to present all user data.
 *
 * This template is used when viewing a registered user's page,
 * e.g., example.com/user/123. 123 being the user's ID.
 *
 * Available variables:
 * - content: A list of content items. Use 'content' to print all content, or
 *   print a subset such as 'content.field_example'. Fields attached to a user
 *   such as 'user_picture' are available as 'content.user_picture'.
 * - attributes: HTML attributes for the container element.
 * - user: A Drupal User entity.
 *
 * @see template_preprocess_user()
 */
#}
<article{{ attributes.addClass('profile', view_mode) }}>
  {% if content %}
    <div class="row dashboard-row dashboard-summary">
      <div class="col col-level1 col-lg-4 col-md-4">
        <div class="row user-summary">
          <div class="col col-level2 col-lg-4 col-md-4">
            <div class="user-photo">
              {{ profile.field_photo|raw }}
            </div>
            {% if privileged %}
              <div class="fields fields-user-contact-info">
                <div class="user-email"><a href="mailto:{{ user.email }}">{{ user.email }}</a></div>
                {% if (profile.field_phone_primary|render|striptags|trim) %}
                  {{ profile.field_phone_primary }}
                {% endif %}
              </div>
            {% endif %}
          </div>
          <div class="col col-level2 col-lg-8 col-md-8">
            <div class="fields fields-user-identity">
              {% if content.realname|render|striptags|trim %}
                <div class="field field--name-field-realname field--type-string field--label-hidden field__item">{{ content.realname }}</div>
              {% endif %}

              {% if (profile.field_title|render|striptags|trim) %}
                <div class="field field--name-field-title field--type-string field--label-hidden field__item">
                  {{ profile.field_title }}
                </div>
              {% endif %}

              {% if (profile.field_organization|render|striptags|trim) %}
                <div class="field field--name-field-organization field--type-string field--label-hidden field__item">
                  {{ profile.field_organization }}
                </div>
              {% endif %}

              {% if privileged %}
                {{ drupal_entity('block', 'mbgna_dxpr_local_tasks') }}
              {% endif %}
            </div>
          </div>
        </div>
      </div>
      <div class="col col-level1 col-lg-4 col-md-4">
        {% if privileged %}
          <div class="boxed-field boxed-field-light">
            {{ drupal_view('membership', 'block_1') }}
          </div>
        {% endif %}
      </div>
      <div class="col col-level1 col-lg-4 col-md-4">
        {% if privileged %}
          <div class="boxed-field boxed-field-light">
            {{ drupal_entity('webform', 'member_contact') }}
          </div>
        {% endif %}
      </div>
    </div>

    {% if privileged %}
      <hr class="landing-section">
      <div class="row dashboard-row dashboard-content">
        <h2>Member Content</h2>
        <div class="col col-first col-level1 col-lg-4 col-md-4">
          {% if drupal_view_result('posts', 'block_2', 'news') is not empty %}
            <div class="boxed-field boxed-field-light">
              {{- drupal_view('posts', 'block_2') -}}
            </div>
          {% endif %}
        </div>
        <div class="col col-first col-level1 col-lg-4 col-md-4">
          {% if drupal_view_result('events', 'block_4') is not empty %}
            <div class="boxed-field boxed-field-light">
              {{- drupal_view('events', 'block_4') -}}
            </div>
          {% endif %}
        </div>
        <div class="col col-last col-level1 col-lg-4 col-md-4">
          {% if drupal_view_result('resource', 'block_1') is not empty %}
            <div class="boxed-field boxed-field-light">
              {{- drupal_view('resource', 'block_1') -}}
            </div>
          {% endif %}
        </div>
      </div>
    {% endif %}

