{#
/**
 * @file
 * Theme override to present all user data.
 *
 * This template is used when viewing a registered user's page,
 * e.g., example.com/user/123. 123 being the user's ID.
 *
 * Available variables:
 * - content: A list of content items. Use 'content' to print all content, or
 *   print a subset such as 'content.field_example'. Fields attached to a user
 *   such as 'user_picture' are available as 'content.user_picture'.
 * - attributes: HTML attributes for the container element.
 * - user: A Drupal User entity.
 *
 * @see template_preprocess_user()
 */
#}
<article{{ attributes.addClass('profile', view_mode) }}>
  {% if content %}
    <div class="row">
      <div class="col-level1 col-lg-4 col-md-4">
        <div class="row user-summary">
          <div class="col-level2 col-lg-4 col-md-4">
            <div class="user-photo">
              {{ content.field_photo }}
            </div>
            {% if privileged %}
              <div class="fields fields-user-contact-info">
                <div class="user-email"><a href="mailto:{{ user.email }}">{{ user.email }}</a></div>
                {{ content.field_telephone_primary }}
              </div>
            {% endif %}
          </div>
          <div class="col-level2 col-lg-8 col-md-8">
            <div class="fields fields-user-identity">
              {% if content.realname|render|striptags|trim %}
                <div class="field field--name-field-realname field--type-string field--label-hidden field__item">{{ content.realname }}</div>
              {% endif %}
              {{ content.field_title }}
              {{ content.field_organization }}
              {% if privileged %}
                {{ drupal_entity('block', 'mbgna_dxpr_local_tasks') }}
              {% endif %}
            </div>
          </div>
        </div>
      </div>
      <div class="col-level1 col-lg-4 col-md-4">
        {% if privileged %}
          <div class="boxed-field boxed-field-light" style="margin-top: -30px;">
            {{- drupal_view('posts', 'block_2') -}}
          </div>
          <div class="boxed-field boxed-field-light">
            {{- drupal_view('events', 'block_4') -}}
          </div>
        {% endif %}
      </div>
      <div class="col-level1 col-lg-4 col-md-4">
        {% if privileged %}
          <div class="boxed-field boxed-field-light" style="margin-top: -30px;">
            {{ drupal_entity('webform', 'member_contact') }}
          </div>
        {% endif %}
      </div>
    </div>
    <div class="row">
      <div class="col-level2 col-lg-12 col-md-12">
        {% if privileged %}
          <div class="boxed-field boxed-field-light">
            {{- drupal_view('content_dashboard', 'block_1') -}}
          </div>
        {% endif %}
      </div>
    </div>
    <div class="row">
      <div class="col-level1 col-lg-4 col-md-4">
        {% if drupal_view_result('content_profile', 'block_1', user.id, 'news') is not empty %}
          <div class="boxed-field boxed-field-light">
            <h2>News</h2>
            {{- drupal_view('content_profile', 'block_1', user.id, 'news') -}}
          </div>
        {% endif %}
      </div>
      <div class="col-level1 col-lg-4 col-md-4">
        {% if drupal_view_result('content_profile', 'block_1', user.id, 'story') is not empty %}
          <div class="boxed-field boxed-field-light">
            <h2>Stories</h2>
            {{- drupal_view('content_profile', 'block_1', user.id, 'story') -}}
          </div>
        {% endif %}
      </div>
      <div class="col-level1 col-lg-4 col-md-4">
        {% if drupal_view_result('content_profile', 'block_1', user.id, 'press-release') is not empty %}
          <div class="boxed-field boxed-field-light">
            <h2>Press Releases</h2>
            {{- drupal_view('content_profile', 'block_1', user.id, 'press-release') -}}
          </div>
        {% endif %}
      </div>
    </div>
  {% endif %}
</article>
