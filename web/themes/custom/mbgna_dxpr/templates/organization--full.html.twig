{#
/**
 * @file
 * Default theme implementation to present a organization entity.
 *
 * This template is used when viewing a canonical organization page,
 *
 * Available variables:
 * - content: A list of content items. Use 'content' to print all content, or
 *   print a subset such as 'content.label'.
 * - attributes: HTML attributes for the container element.
 *
 * @see template_preprocess_organization()
 */
#}
{%
  set classes = [
    'organization',
    bundle|clean_class,
    view_mode ? view_mode|clean_class,
    status ? 'is-published' : 'is-unpublished',
    'clearfix',
  ]
%}
<article{{ attributes.addClass(classes) }}>
  <div class="article-heading">
    <div class="article-kicker"><a href="/organizations">Organizations</a></div>
    <h2 class="page-title">{{ title_prefix }}{{ content.label|render|striptags|trim }}{{ title_suffix }}</h2>
  </div>
  <div class="article-body article-has-aside article-has-aside-right row">
    {% block content %}
      <div class="article-body-content col-lg-12 col-md-12 row">
        <div class="col-md-8 article-body-content-column article-body-content-column-left article-body-content-column-main">
          {% if content %}
            <div class="col-md-12 col-lg-12 row article-body-content-column-header">
              <div class="col-md-6 col-lg-6 article-body-content-column-header-column-left">
                {{- content.field_image -}}
              </div>
              <div class="col-md-6 col-lg-6 article-body-content-column-header-column-right">
                {{- content.field_description -}}
              </div>
            </div>
          {% endif %}
          {{- drupal_view('organization', 'block_1') -}}
        </div>
        <div class="col-md-4 article-body-content-column article-body-content-column-right">
          {% if content %}
            <div class="basic-fields">
              <h3>Organization details</h3>
              {{- content|without('field_description', 'field_image', 'field_images') -}}
            </div>
            {% if content.field_images|render|striptags %}
              <div class="special-fields">
                {{- content.field_images -}}
              </div>
            {% endif %}
          {% endif %}
        </div>
      </div>
    {% endblock %}
  </div>
</article>
