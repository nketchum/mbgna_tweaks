/**
 * Prepares variables for the html template. Adds node object.
 *
 * Default template: html.html.twig.
 *
 * See the html.html.twig template for the list of variables.
 */
function mbgna_preprocess_html(&$variables) {
  // If bootstrap basetheme is not loading bootstrap from CDN load it locally
  // This is default behavior starting from DXPR Theme 8.x-1.1.3 and 7.x-2.7.3.
  $bootstrap_cdn = theme_get_setting('cdn_provider');
  if (!$bootstrap_cdn) {
    $variables['#attached']['library'][] = 'mbgna/bootstrap3';
  }
}

/**
 * Implements template_preprocess_page()
 */
function mbgna_preprocess_page(&$variables) {

  // CSS to load on every page.
  $dxpr_theme_libraries = [
    // Bootstrap TAILORING.
    'mbgna/bootstrap-3',
    'mbgna/bootstrap-theme',
  // TODO: include only if needed.
    'mbgna/jquery-ui',
    // DXPR THEME BASE.
    'mbgna/forms',
    'mbgna/layout',
    'mbgna/page-title',
    'mbgna/typography',
    // DXPR THEME Components  //TODO: include only if needed.
    'mbgna/dxpr-theme-header--side',
    'mbgna/admin',
    // Overrides   //TODO: include only if needed.
    'mbgna/drupal-webform',
    'mbgna/dxpr-theme-builder',
    // HELPERS.
    'mbgna/helper-classes',
  ];
  foreach ($dxpr_theme_libraries as $dxpr_theme_library) {
    $variables['#attached']['library'][] = $dxpr_theme_library;
  }
}

/**
 * Implements template_menu_local_tasks()
 */
function mbgna_preprocess_menu_local_tasks(&$variables) {
  if ($variables['secondary']) {
    // Secondary tabs are styled with bootstrap pager CSS.
    $variables['#attached']['library'][] = 'mbgna/drupal-pager';
  }
}

/**
 * Implements template_preprocess_block()
 */
function mbgna_preprocess_block(&$variables) {
  // Include DXPR Theme full search block css library.
  if ($variables['plugin_id'] === 'full_screen_search') {
    $variables['#attached']['library'][] = 'mbgna/dxpr-theme-full-screen-search';
  }
}

/**
 * Implements template_preprocess_region()
 */
function mbgna_preprocess_region(&$variables) {
  switch ($variables['region']) {
    case 'secondary_header':
      $variables['#attached']['library'][] = 'mbgna/dxpr-theme-secondary-header';
    case 'navigation':
    case 'navigation_collapsible':
      $variables['#attached']['library'][] = 'mbgna/dxpr-theme-header';
      $variables['#attached']['library'][] = 'mbgna/dxpr-theme-header--top';
      $variables['#attached']['library'][] = 'mbgna/dxpr-theme-header--mobile';
      break;

    case 'footer':
      $variables['#attached']['library'][] = 'mbgna/footer-menu';
      break;
  }
}

/**
 * Implements template_preprocess_breadcrumb()
 */
function mbgna_preprocess_breadcrumb(&$variables) {
  if ($variables['breadcrumb']) {
    $variables['#attached']['library'][] = 'mbgna/drupal-breadcrumbs';
  }
}

/**
 * Implements template_preprocess_comment()
 */
function mbgna_preprocess_comment(&$variables) {
  if ($variables['elements']['#comment']) {
    $variables['#attached']['library'][] = 'mbgna/drupal-comments';
  }
}

/**
 * Implements template_preprocess_pager()
 */
function mbgna_preprocess_pager(&$variables) {
  $variables['#attached']['library'][] = 'mbgna/drupal-pager';
}


/**
 * Implements template_preprocess_input()
 */
function mbgna_preprocess_input(&$variables) {
  $variables['#attached']['library'][] = 'mbgna/drupal-search';
}
